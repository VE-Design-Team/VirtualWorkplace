          //- th Role
      tbody#tableToModify2
        tr#rowToClone2
          td
            input.abbeyscale.form-control.form-control-sm(type='date', placeholder='yyyy/mm/dd',min="1990-01-01", max="2040-12-31")
          td
            input#time.abbeyscale.form-control.form-control-sm(type='text',pattern="\d{1,2}:\d{1,2}",maxlength="5", name='time' placeholder='HH:MM',min='00:00',max='23:00',required="required")
          td
            select.abbeyscale.contrecord.form-control-sm.form-control.d-inline
                option(disabled='',selected='', value='')  -- select an option -- 
                option(value='Generalised') Generalised
                option(value='Head') Head
                option(value='Upper torso') Upper torso
                option(value='Lower torso') Lower torso
                option(value='Right arm') Right arm
                option(value='Left arm') Left arm
                option(value='Right leg') Right leg
                option(value='Left leg') Left leg
          td
            select.abbeyscale.align-top.continOption.contrecord.form-control-sm.form-control.d-inline
                option(disabled='',selected='', value='')  -- select an option -- 
                option(value='Verbal') Verbal
                 option(value='Non Verbal') Non Verbal
                
          td
            textarea.abbeyscale(name='story',rows="3",cols='33')
            
            
