    #reset
     table#tablePreviewAbbey.table.table-striped.table-hover
      thead
        tr
          th.w-20 Date
            i.fas.fa-question-circle.btn.btn-sm(data-container="body" data-toggle="popover",data-trigger="hover",data-placement="top",data-content='Select the large triangle to open the calendar and use today’s date.')
        
          th.w-15 Time
            i.fas.fa-question-circle.btn.btn-sm( data-container="body" data-toggle="popover",data-trigger="hover",data-placement="top",data-content='Enter the hours or minutes input (HH:MM)')
          th Location
            i.fas.fa-question-circle.btn.btn-sm( data-container="body" data-toggle="popover",data-trigger="hover",data-placement="top",data-content='Which area of the resident’s body is the pain located')
          th Verbal/Non Verbal
            i.fas.fa-question-circle.btn.btn-sm( data-container="body" data-toggle="popover",data-trigger="hover",data-placement="top",data-content='Is the resident able to speak to assist you with your questions')
          th.w-30 Comments
            i.fas.fa-question-circle.btn.btn-sm( data-container="body" data-toggle="popover",data-trigger="hover",data-placement="top",data-content='Record any information which may be of assistance')
          //- th xxxx
