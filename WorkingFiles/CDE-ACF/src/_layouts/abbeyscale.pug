    #abb
    p
    | #[strong Vocalisation] 
    br
    | (e.g whimpering,groaning,crying)
    br
    select.abbeyscale.form-control-sm(name='score[1]')
                option(disabled='',selected='', value='')  -- select an option -- 
                option(value='0') 0 - Absent
                option(value='1') 1 - Mild
                option(value='2') 2 - Moderate
                option(value='3') 3 - Severe
    p
    | #[strong Physiological Change] 
    br
